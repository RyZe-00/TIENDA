<h2 class="text-center my-4">Registro</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation', novalidate: true }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <%= f.label :Correo, class: 'form-label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :Contraseña, class: 'form-label' %>
    <% if @minimum_password_length %>
      <small class="form-text text-muted">(<%= @minimum_password_length %> caracteres minimo)</small>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :Confirmar_contraseña, class: 'form-label' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="mb-3"> 
    <%= f.label :role_id, "Seleccione Rol", class: 'form-label' %> 
     <%= f.collection_select :role_id, Role.all, :id, :name, { prompt: "Select a role" }, class: 'form-select' %> 
  </div> 

  <div class="text-center">
    <%= f.submit "Registrarse", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>